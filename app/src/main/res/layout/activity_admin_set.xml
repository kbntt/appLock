<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminSetActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="@android:dimen/app_icon_size"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/admin_set_notice"
        android:textSize="20dp"
        android:background="@drawable/edge"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/admin_phone_number"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/edTxtAdminPhoneNumber"
            android:inputType="phone"
            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/admin_pass_word"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/edTxtAdminPassWord"
            android:inputType="phone"
            />
    </TableRow>

    <Button
        android:id="@+id/btnSend"
        android:onClick="btnSendOnClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send"
        android:textSize="20dp"/>


</LinearLayout>